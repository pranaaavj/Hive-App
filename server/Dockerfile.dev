# âœ… Simple dev Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy only lock & manifest first (layer caching)
COPY package.json pnpm-lock.yaml ./

# Install ALL dependencies (prod + dev)
RUN pnpm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5001

# Run dev server (nodemon or ts-node)
CMD ["pnpm", "dev"]
